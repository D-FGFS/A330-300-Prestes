<!-- ANIMATION-->
<!-- Cockpit Controls -->
 <animation>
  <type>rotate</type>
  <object-name>ThrottleLeft</object-name>
  <property>controls/engines/engine[0]/throttle</property>
  <factor>-55</factor>
  <center>
   <x-m>-16.771</x-m>
   <y-m>0</y-m>
   <z-m>-2.370</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>ThrottleRight</object-name>
  <property>controls/engines/engine[1]/throttle</property>
  <factor>-55</factor>
  <center>
   <x-m>-16.771</x-m>
   <y-m>0</y-m>
   <z-m>-2.370</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>1</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>PedalLeft</object-name>
  <property>controls/flight/rudder</property>
  <factor>0.10</factor>
  <axis>
   <x>1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>translate</type>
